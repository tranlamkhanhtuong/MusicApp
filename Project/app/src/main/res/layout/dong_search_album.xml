<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:id="@+id/imagviewSearchalbum"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView

        android:id="@+id/textviewsearchtenalbum"
        android:textSize="15sp"
        android:textColor="#0a0a0a"
        android:text="Ten Album"
        android:layout_toRightOf="@+id/imagviewSearchalbum"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView

        android:id="@+id/textviewsearchtencasi"
        android:textSize="15sp"
        android:textColor="#ea2222"
        android:text="Ca si"
        android:layout_below="@id/textviewsearchtenalbum"
        android:layout_toRightOf="@+id/imagviewSearchalbum"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView

        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewSearchluotthich"
        android:layout_width="10dp"
        android:layout_height="10dp" />

</RelativeLayout>