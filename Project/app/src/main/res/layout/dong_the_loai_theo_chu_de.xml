<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/framelayouttheloaitheochude">
            
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/imageviewtheloaitheochude"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:id="@+id/textviewtentheloaitheochude"
            android:ellipsize="end"
            android:layout_gravity="left"
            android:lines="1"
            android:maxWidth="200dp"
            android:text="Nhac viet hot trong thang 10"
            android:textSize="15sp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:ellipsize="end"
            android:layout_gravity="left"
            android:lines="1"
            android:maxWidth="200dp"
            android:text="CaSi"
            android:textSize="13sp"
            android:id="@+id/textviewtencasitheloaitheochude"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>