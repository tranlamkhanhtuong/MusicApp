<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:elevation="5dp"
    >
    <!-- Vì cardview chỉ chứa một view nên cần tạo thêm một view group để chứa nhiều view-->
    <RelativeLayout

        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Số thứ tự bài hát-->
        <TextView
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/textviewdanhsachindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Tên ca khúc -->
        <TextView
            android:id="@+id/textviewtenbaihat"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="Tên ca khúc"
            android:textColor="#030303"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Tên ca si-->
        <TextView
            android:id="@+id/textviewtencasi"
            android:layout_below="@id/textviewtenbaihat"
            android:layout_toRightOf="@id/textviewdanhsachindex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="Tên ca sĩ"
            android:textColor="#d94f4f"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--Vote-->
        <ImageView
            android:src="@drawable/iconlove"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imageviewluotthichdanhsachbaihat"
            android:layout_width="30dp"
            android:layout_height="30dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>